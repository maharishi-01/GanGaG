<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrematoriaFragment">

    <SearchView
        android:id="@+id/ghatSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="search for riverfront"/>

    <ImageView
        android:layout_below="@+id/ghatSearch"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/cremation" />
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_below="@+id/imageView"
        android:id="@+id/showCrematoria"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e6eeff"/>
</RelativeLayout>